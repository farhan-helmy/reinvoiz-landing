---
import "../styles/global.css";
// Component Imports
import { Button } from "@/components/ui/button";
import VideoPreview from "@/components/VideoPreview";

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Automate Invoice Management With AI | Reinvoiz</title>
    <meta
      name="description"
      content="Transform your invoice workflow with AI-powered automation. Generate, track, and get paid faster."
    />
    <meta
      name="keywords"
      content="AI invoicing, invoice automation, billing software, accounts receivable automation, get paid faster, invoice tracking, payment reminders, small business invoicing, Malaysia invoicing software, US invoicing software, e-invoice Malaysia, e-invoicing Malaysia, SST invoicing, MYR invoicing, USD invoicing"
    />
    <meta
      name="robots"
      content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
    />
    <meta name="theme-color" content="#000000" />

    <!-- Canonical -->
    <link rel="canonical" href="https://reinvoiz.com/" />

    <!-- Hreflang (US & Malaysia) -->
    <link rel="alternate" href="https://reinvoiz.com/" hreflang="x-default" />
    <link rel="alternate" href="https://reinvoiz.com/" hreflang="en-US" />
    <link rel="alternate" href="https://reinvoiz.com/" hreflang="en-MY" />
    <link rel="alternate" href="https://reinvoiz.com/" hreflang="ms-MY" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Reinvoiz" />
    <meta
      property="og:title"
      content="Automate Invoice Management With AI | Reinvoiz"
    />
    <meta
      property="og:description"
      content="Transform your invoice workflow with AI-powered automation. Generate, track, and get paid faster."
    />
    <meta property="og:url" content="https://reinvoiz.com/" />
    <meta property="og:image" content="https://reinvoiz.com/reinvoiz.png" />
    <meta property="og:image:alt" content="Reinvoiz – AI invoice automation" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:locale:alternate" content="en_MY" />
    <meta property="og:locale:alternate" content="ms_MY" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@reinvoiz" />
    <meta
      name="twitter:title"
      content="Automate Invoice Management With AI | Reinvoiz"
    />
    <meta
      name="twitter:description"
      content="Transform your invoice workflow with AI-powered automation. Generate, track, and get paid faster."
    />
    <meta name="twitter:image" content="https://reinvoiz.com/reinvoiz.png" />

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "Reinvoiz",
        "applicationCategory": "BusinessApplication",
        "operatingSystem": "Web",
        "url": "https://reinvoiz.com/",
        "image": "https://reinvoiz.com/reinvoiz.png",
        "description": "AI-powered invoice automation: generate, send, and track invoices to get paid faster.",
        "offers": {
          "@type": "Offer",
          "price": "9.90",
          "priceCurrency": "MYR"
        },
        "areaServed": [
          { "@type": "Country", "name": "United States" },
          { "@type": "Country", "name": "Malaysia" }
        ],
        "inLanguage": ["en-US", "en-MY", "ms-MY"]
      }
    </script>
  </head>

  <body class="antialiased">
    <!-- Enhanced Header with Glassmorphism -->
    <header
      class="fixed top-0 z-50 w-full border-b border-white/5 bg-black/40 backdrop-blur-xl supports-[backdrop-filter]:bg-black/40"
    >
      <div
